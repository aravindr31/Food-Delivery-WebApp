{{>Header}}
{{#if addCheck}}
<div aria-live="polite" aria-atomic="true" style="position: relative; min-height: 200px;">
    <div class="toast" style="position: absolute; top: 0; right: 0;">
        <div class="toast-header">
            <img src="..." class="rounded mr-2" alt="...">
            <strong class="mr-auto">Foodies</strong>
            <small>11 mins ago</small>
            <button type="button" class="ml-2 mb-1 close" data-dismiss="toast" aria-label="Close">
                <span aria-hidden="true">&times;</span>
            </button>
        </div>
        <div class="toast-body">
            Item Added Successfully
        </div>
    </div>
</div>
{{/if}}
<div class="contain container-fluid pl-5 pr-5 ">
    <div class="btns">
        <button class="btn btn-primary">Dishes</button>
        <a href="/admin/add-dish" class="btn btn-primary">Add Dish</a>
    </div>
    <div class="row">

        {{!-- <div class="cardcontainer-left mr-2"> --}}
        {{#each menu}}
        <div class="col-md-6 p-3">
            <div class="card mb-3" style="max-width: 650px;">
                <div class="row no-gutters">
                    <div class="col-md-5">
                        <img src="https://res.cloudinary.com/swiggy/image/upload/fl_lossy,f_auto,q_auto,w_508,h_320,c_fill/ndxghfzqe4qc2dacxiwd"
                            class="card-img cardimage" alt="...">
                    </div>
                    <div class="col-md-7">
                        <div class="card-body">
                            <h5 class="card-title">{{this.Name}}</h5>
                            <p class="card-text">Categoy : {{this.Category}}</p>
                            <p class="card-text">Categoy : {{this.VegCategory}}</p>
                            <p class="card-text">Price : {{this.Price}}</p>
                            {{!-- <p class="card-text"><small class="text-muted">Last updated 3 mins ago</small></p> --}}
                        </div>
                    </div>
                </div>
            </div>
        </div>
        {{/each}}
    </div>
</div>